  "version": "0.2.0",
  "compounds": [
    {
      "name": "SERVER+CLIENT",
      "configurations": ["SERVER", "CLIENT"]
    }
  ],
  "configurations": [
    {
      "name": "SERVER",
      "type": "node",
      "request": "attach",
      "port": "9229"
    },
    {
      "name": "CLIENT",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "command": "npm run debug:alive",
      "type": "node-terminal",
      "request": "launch",
      "name": "ALIVE"
    }
  ]
}
