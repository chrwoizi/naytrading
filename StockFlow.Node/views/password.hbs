<h2>Change password</h2>
<div class="row">
    <div class="col-md-8">
        <section id="passwordForm">
            <form action="/password" class="form-horizontal" method="post" role="form">
                <hr />
                <input id="email" name="email" type="hidden" value="{{username}}" />
                <div class="form-group">
                    <label class="col-md-2 control-label" for="password">Current password</label>
                    <div class="col-md-10">
                        <input class="form-control" data-val="true" id="password" name="password" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="newPassword">New password</label>
                    <div class="col-md-10">
                        <input class="form-control" data-val="true" id="newPassword" name="newPassword" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="confirmPassword">Confirm new password</label>
                    <div class="col-md-10">
                        <input class="form-control" data-val="true" id="confirmPassword" name="confirmPassword" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Change password" class="btn btn-default" />
                    </div>
                </div>
                {{#if hasError}}
                <div class="validation-summary-errors text-danger">
                    <ul>
                        <li>{{message}}</li>
                    </ul>
                </div>
                {{else}}
                {{#if hasMessage}}
                <div class="validation-summary-valid text-success">
                    <ul>
                        <li>{{message}}</li>
                    </ul>
                </div>
                {{/if}}
                {{/if}}
            </form>
        </section>
    </div>
</div>
