{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist/src",
    "baseUrl": "./",
    "incremental": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"]
}
